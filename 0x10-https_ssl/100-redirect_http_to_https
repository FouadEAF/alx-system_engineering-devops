# /etc/haproxy/haproxy.cfg

# Frontend configuration for HTTP
frontend http_front
    bind *:80
    mode http
    redirect scheme https code 301 if !{ ssl_fc }

# Frontend configuration for HTTPS
frontend https_front
    bind *:443 ssl crt /etc/ssl/private/your_domainwww.dev-eaf.tech.pem
    mode http
    default_backend backend_servers

# Backend configuration
backend backend_servers
    mode http
    balance roundrobin
    server 354632-web-01 54.162.36.27:80 check
    server 354632-web-02 52.3.246.49:80 check
